@model Model.Entities.Policy

@{
    ViewBag.Title = "Policies";
    Layout = "~/Views/Shared/LayoutView.cshtml";
    List<Model.Entities.Policy> policies = ViewBag.policies;
}

<h2>Securiry policies</h2>
<div class="row">


    <div class=" col-lg-12">

        @using (Html.BeginForm("Policy", "Policy", FormMethod.Post, new { id = "frm-alumno" }))
        {
            <div class="form-group">
                <h6>Policy name</h6>
                @Html.TextBoxFor(m => m.policy_name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.policy_name, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                <h6>Policy description</h6>
                @Html.TextAreaFor(m => m.policy_description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.policy_description, null, new { @class = "label label-danger" })
            </div>

            <div class="text-right">
                <button data-ajax="true" data-confirm="Seguro desea guardar el registro" type="submit" class="btn btn-primary">Save</button>
            </div>
        }

</div>
    <hr />
</div>

<div class="row">
    
    <div class=" col-lg-12">
        @{if (policies.Count > 0)
          { 
                <table class="table">
                    <thead>
                        <tr>
                            <th>Policy Name</th>
                            <th>Description</th>
                            <th style="width:100px"></th>
                            <th style="width:100px"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var m in policies)
                        {
                        <tr>
                            <th>
                                @m.policy_name
                            </th>
                            <th>
                                @m.policy_description
                            </th>
                            <th>
                                <a class="btn btn-xs btn-default btn-block" href="~/Policy/EditPolicy/@m.id_policy">Editar</a>
                            </th>
                            <th>
                                @Html.ActionLink("Delete", "DeletePolicy", "Policy", new { m.id_policy,m.policy_description,m.policy_name }, new { @class = "btn btn-xs btn-danger btn-block" })
                            </th>
                        </tr>
                        }

                    </tbody>
                </table>

          }
        }

    </div>

    
</div>


