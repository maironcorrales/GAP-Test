@model Model.Entities.Client_has_Policy
@{
    ViewBag.Title = "EditPlan";
    Layout = "~/Views/Shared/LayoutView.cshtml";
}

<h2>Editing Plan</h2>
<div class="row">


    <div class=" col-lg-12">

        @using (Html.BeginForm("EditPolicy", "Client", FormMethod.Post, new { id = "frm-policy" }))
        {

            @Html.HiddenFor(m => m.id_coverage_plan);
            <div class="col-lg-6">
                <div class="form-group">
                    <h6>Select a policy</h6>
                    @Html.DropDownListFor(m => m.policy_id_policy, ViewBag.policies as SelectList, "Select a policy", new { @class = "form-control" })

                </div>

                <div class="form-group">
                    <h6>Coverage plan Description</h6>
                    @Html.TextAreaFor(m => m.plan_Coverage_description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.plan_Coverage_description, null, new { @class = "label label-danger" })
                </div>
                <div class="form-group">
                    <h6>Object that policy is going to cover</h6>
                    @Html.TextBoxFor(m => m.cover_object, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.cover_object, null, new { @class = "label label-danger" })
                </div>
                <div class="form-group">
                    <h6>Date that the policy begins to be effective</h6>
                    @Html.TextBoxFor(m => m.coverage_start, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.coverage_start, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <h6>Coverage amount (percentual)</h6>
                    @Html.TextBoxFor(m => m.coverage_amount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.coverage_amount, null, new { @class = "label label-danger" })
                </div>

                <div class="form-group">
                    <h6>Coverage period (months)</h6>
                    @Html.TextBoxFor(m => m.coverage_period, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.coverage_period, null, new { @class = "label label-danger" })
                </div>
                <div class="form-group">
                    <h6>Coverage price</h6>
                    @Html.TextBoxFor(m => m.coverage_monthly_price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.coverage_monthly_price, null, new { @class = "label label-danger" })
                </div>
                <div class="form-group">
                    <h6>Risk</h6>
                    @Html.DropDownListFor(m => m.risk, new List<SelectListItem>
                    {
                        new SelectListItem {Text="low",Value="1" },
                        new SelectListItem {Text="Medium",Value="2" },
                        new SelectListItem {Text="Medium-High",Value="3" },
                        new SelectListItem {Text="High",Value="4" },
                    },
                    "Select a risk level", new { @class = "form-control" })

                </div>


            </div>
            <div class="text-right">

                <button data-ajax="true" data-confirm="Seguro desea guardar el registro" type="submit" class="btn btn-primary">Save</button>
            </div>
        }

    </div>
    <hr />
</div>
